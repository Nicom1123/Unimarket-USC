<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Imagen_logo"
        android:layout_width="91dp"
        android:layout_height="82dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_unimarket_usc" />

    <TextView
        android:id="@+id/Texto_inicio1"
        android:layout_width="307dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="@string/texto_inicio1"
        app:layout_constraintStart_toEndOf="@+id/Imagen_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/estudiantes_hablando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Texto_inicio1"
        app:srcCompat="@drawable/estudiantes_hablando" />

    <TextView
        android:id="@+id/Texto_inicio2"
        android:layout_width="317dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:text="@string/texto_inicio2"
        app:layout_constraintBottom_toTopOf="@+id/Iniciar_sesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estudiantes_hablando" />

    <Button
        android:id="@+id/Iniciar_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_iniciarsesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="526dp" />


</androidx.constraintlayout.widget.ConstraintLayout>