<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. HEADER AZUL -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#0047AB"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Aquí podrías poner tu SearchView, logo o dirección -->
        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cl. 5 #62-00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
        <!-- Opcional: un espacio para separar del final -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/btnCarritoTop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cart"
            android:contentDescription="Carrito"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- 2. CONTENIDO PRINCIPAL -->
    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/blanco">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Encabezado de bienvenida -->
            <TextView
                android:id="@+id/usuario_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido!"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Botones superiores: carrito y usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/btnCarrito"
                    android:layout_width="37dp"
                    android:layout_height="35dp"
                    android:src="@drawable/cart"
                    android:contentDescription="Botón Carrito"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/btnUsuario"
                    android:layout_width="37dp"
                    android:layout_height="35dp"
                    android:src="@drawable/unsplash_nf0rrrr4z0e"
                    android:contentDescription="Botón Usuario" />
            </LinearLayout>

            <!-- Categorías -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/CategoríaTecnologia"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/tecnologia"
                        android:contentDescription="Categoría Tecnología" />

                    <ImageView
                        android:id="@+id/CategoríaLibreria"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/libreria"
                        android:contentDescription="Categoría Librería" />

                    <ImageView
                        android:id="@+id/CategoríaPapeleria"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/papeleria"
                        android:contentDescription="Categoría Papelería" />

                    <ImageView
                        android:id="@+id/CategoríaRopa"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ropa"
                        android:contentDescription="Categoría Ropa" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Mensaje de productos no disponibles -->
            <TextView
                android:id="@+id/textoSinProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay elementos disponibles"
                android:textColor="#888888"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="48dp"
                android:padding="16dp"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>

    <!-- 3. BARRA DE NAVEGACIÓN INFERIOR -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:src="@drawable/house"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/IconTruck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/truck"
            android:contentDescription="Envíos" />

        <ImageView
            android:id="@+id/btnHistorial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/history"
            android:contentDescription="Historial" />

        <ImageView
            android:id="@+id/btnUsuarioNav"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:src="@drawable/unsplash_nf0rrrr4z0e"
            android:contentDescription="Perfil" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

