<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado de bienvenida -->
        <TextView
            android:id="@+id/usuario_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido!"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="8dp" />

        <!-- Botones superiores: carrito y usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/btnCarrito"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:src="@drawable/cart"
                android:contentDescription="Botón Carrito"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/btnUsuario"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:src="@drawable/unsplash_nf0rrrr4z0e"
                android:contentDescription="Botón Usuario" />
        </LinearLayout>

        <!-- Categorías -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/CategoríaVegetales"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/vegetales"
                    android:contentDescription="Categoría Vegetales" />

                <ImageView
                    android:id="@+id/CategoríaCarnes"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/carnes"
                    android:contentDescription="Categoría Carnes" />

                <ImageView
                    android:id="@+id/CategoríaLacteos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/lacteos"
                    android:contentDescription="Categoría Lácteos" />

                <ImageView
                    android:id="@+id/CategoríaAseo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/aseo"
                    android:contentDescription="Categoría Aseo" />

                <ImageView
                    android:id="@+id/CategoríaUtiles"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/utiles"
                    android:contentDescription="Categoría Útiles" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Mensaje de productos no disponibles -->
        <TextView
            android:id="@+id/textoSinProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay elementos disponibles"
            android:textColor="#888888"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:padding="16dp"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>
